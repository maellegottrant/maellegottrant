score = int ( input (" Entrer le score :") )
for i in range (n):

    gain = int ( input (" entrer le gain :") )
    n = int(input("nombre de tours"))
    nb_zeros=0
    nouveau_score = score + gain

    if nouveau_score < 51:
        print (" Nouveau score :", nouveau_score )
    elif nouveau_score == 51:
        print (" Gagne !")
    else :
        nouveau_score = 25
        print (" Trop grand ! Nouveau score : 25")

    if gain==0:
        nb_zeros+=1
        if nb_zeros==3:
            print("Perdu")
    
    print (" Fin du tour ")
